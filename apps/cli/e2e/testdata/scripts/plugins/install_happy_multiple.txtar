# Test plugins install can install multiple plugins at once
# This test requires the mock-registry container to be running

wait_registry

# First, save API key credentials to the registry
mkdir $WORK/.bluelink/clients
cp plugins.auth.json $WORK/.bluelink/clients/plugins.auth.json
env HOME=$WORK

# Set plugin installation directory to a temp location
env BLUELINK_DEPLOY_ENGINE_PLUGIN_PATH=$WORK/plugins

# Run install with multiple plugins
exec bluelink plugins install localhost:18080/bluelink/test-provider@1.0.0 localhost:18080/bluelink/test-transformer@1.0.0
stdout 'test-provider.*installed'
stdout 'test-transformer.*installed'
stdout 'Installed: 2'

# Verify both plugins were extracted
exists $WORK/plugins/bin/bluelink/test-provider/1.0.0/plugin
exists $WORK/plugins/bin/bluelink/test-transformer/1.0.0/plugin

-- bluelink.config.toml --
# Empty config file

-- plugins.auth.json --
{
  "localhost:18080": {
    "apiKey": "test-api-key-12345"
  }
}
