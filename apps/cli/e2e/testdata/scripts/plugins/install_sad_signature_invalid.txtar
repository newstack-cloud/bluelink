# Test plugins install fails when plugin has invalid GPG signature
# The 'bad-signature' test plugin returns an invalid GPG signature
# This test requires the mock-registry container to be running

wait_registry

# First, save API key credentials to the registry
mkdir $WORK/.bluelink/clients
cp plugins.auth.json $WORK/.bluelink/clients/plugins.auth.json
env HOME=$WORK

# Set plugin installation directory to a temp location
env BLUELINK_DEPLOY_ENGINE_PLUGIN_PATH=$WORK/plugins

# Run install for plugin with bad signature - should fail
! exec bluelink plugins install localhost:18080/bluelink/bad-signature@1.0.0
stdout 'signature verification failed'

-- bluelink.config.toml --
# Empty config file

-- plugins.auth.json --
{
  "localhost:18080": {
    "apiKey": "test-api-key-12345"
  }
}
